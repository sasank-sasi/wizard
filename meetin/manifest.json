{
  "manifest_version": 3,
  "name": "Meeting Recorder",
  "version": "1.0.0",
  "description": "Record audio from Google Meet sessions",
  "permissions": [
    "tabCapture",
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "*://meet.google.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  }
}

